<%- include('../auth/header') %>

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>All Products - Admin</title>
    <link rel="stylesheet" href="/css/header.css" />
    <link rel="stylesheet" href="/css/homePage.css" />

    <style></style>
  </head>
  <body>
    <main class="container">
      <h1>All Products</h1>

      <% if (products && products.length) { %>
      <div class="products-grid">
        <% products.forEach(function(product){ %>
        <div class="product-card">
          <img
            class="product-img"
            src="<%= product.images %>"
            alt="<%= product.productName %>"
          />
          <div class="product-body">
            <div class="product-name"><%= product.productName %></div>
            <div class="product-brand">
              Brand: <%= product.brandName || 'â€”' %>
            </div>
            <div class="prices">
              <div class="price">$<%= product.currentPrice %></div>
              <% if (product.originalPrice) { %>
              <div class="original-price">$<%= product.originalPrice %></div>
              <% } %>
            </div>

            <div class="actions">
              <div>
                <a
                  class="btn edit"
                  href="/admin/edit-product/<%= product._id %>?editing=true"
                  >Edit</a
                >
              </div>
              <div>
                <form
                  class="delete-form"
                  method="POST"
                  action="/admin/delete-product/<%= product._id %>"
                  onsubmit="return confirm('Are you sure you want to delete this product?');"
                >
                  <button type="submit">Delete</button>
                </form>
              </div>
            </div>
          </div>
        </div>
        <% }); %>
      </div>
      <% } else { %>
      <div class="no-products">
        No products found. Add some products to get started.
      </div>
      <% } %>
    </main>
  </body>
</html>
